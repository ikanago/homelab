{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":prHourlyLimitNone"
    ],
    "labels": [
        "dependencies"
    ],
    "customManagers": [
        {
            "custumType": "regex",
            "description": "Docker image tags",
            "matchStrings": [
                "image: (?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)"
            ],
            "datasourceTemplate": "docker"
        }
    ]
}
