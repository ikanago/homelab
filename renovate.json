{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":prHourlyLimitNone"
    ],
    "labels": [
        "dependencies"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^manifests/.*\\.yaml$"
            ],
            "description": "Docker image tags",
            "matchStrings": [
                "image: (?<depName>(?:ghcr\\.io|docker\\.io)\\/[^:]+?):(?<currentValue>[^@]+)@(?<currentDigest>sha256:[a-f0-9]+)"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "docker"
        }
    ]
}
